  <%= render 'layouts/navbar' %>
<h1>Rewards Index</h1>

      <%= button_to "Create Reward", new_admin_reward_path, method: :get %>


<% @rewards.each do |reward| %>
    <div class="reward">
      <%= link_to reward.name, reward_path(reward) %>: <%= reward.value %> points
      <div>
      <%= button_to "Edit", edit_admin_reward_path(reward), method: :get %>
      </div>
      <div>
      <%= button_to "Delete", admin_reward_path(reward), method: :delete, data: { confirm: "Are you sure you want to delete this reward?" } %>
      </div>
    </div>
<% end %>

  <%= render 'layouts/navbar'%>
<h1>Rewards Shop</h1>

<h3>Avaliable Points: <%= @user.total_points %><br>

<% @rewards.each do |reward| %>
    <div class="reward">
      <%= reward.name%>: <%= reward.value %>

      <%= button_to "Purchase", user_user_rewards_path({user_id: @user.id, reward_id: reward.id}), method: :post %>

      <%= form_for(:user_reward, url: user_user_rewards_path(@user, reward)) do |f|%>

      <%= f.submit "Buy" %>
      <% end %>
    </div>
<% end %>
